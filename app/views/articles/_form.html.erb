<% if @article.errors.any? %>
<h2>The following errors prevented the Article from being created</h2>
<ul>
  <% @article.errors.full_messages.each do |err_msg| %>
    <li><%= err_msg %></li>
  <% end %>
</ul>
<% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for @article, html: {class:'form-horizontal', role:'form'} do |forma| %>
      <div class='form-group'>
        <div class= 'control-label col-sm-2'>
          <%= forma.label :title %>
        </div>
        <div class= 'col-sm-8'>
          <%= forma.text_field :title, class: 'form-control', placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class= 'control-label col-sm-2'>
          <%= forma.label :description %>
        </div>
        <div class= 'col-sm-8'>
          <%= forma.text_area :description, rows: 10, class: 'form-control', placeholder: "Description of Article", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class= 'col-sm-offset-2 col-sm-10'>
          <%= forma.submit class: 'btn btn-primary btn-lg'%> 
        </div>
      </div> 
    <% end %>
    <div class='col-xs-2 col-xs-offset-2'>
      [ <%= link_to "Back to all Articles", articles_path %> ]
    </div>
  </div>
</div>